<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/btnStart"
        android:text="开始下载"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnCancel"
        app:layout_constraintTop_toTopOf="@id/btnStart"
        app:layout_constraintStart_toEndOf="@id/btnStart"
        android:text="取消"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <cn.wandersnail.widget.NumberProgressBar
        android:id="@+id/progressBar"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/btnStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvState"
        android:layout_marginTop="6dp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/progressBar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvBlock"
        android:text="分块下载"
        app:layout_constraintStart_toStartOf="@id/btnStart"
        app:layout_constraintTop_toBottomOf="@id/tvState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnStartBlock"
        android:text="开始下载"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnCancelBlock"
        app:layout_constraintTop_toTopOf="@id/btnStartBlock"
        app:layout_constraintStart_toEndOf="@id/btnStart"
        android:text="取消"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <cn.wandersnail.widget.NumberProgressBar
        android:id="@+id/progressBarBlock"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/btnStartBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvStateBlock"
        android:layout_marginTop="6dp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/progressBarBlock"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>